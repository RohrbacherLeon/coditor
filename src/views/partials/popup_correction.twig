<!-- Popup correction -->
<div id="popupCorrection" class="correction">
    <div class="correction-content">
        <span class="close">&times;</span>
            {# If correction exist, print it #}
        {% if correctionText %} <textarea name="function" id="js-correction" cols="30" rows="10">{{correctionText}}</textarea>
        {% else %}<textarea name="function" id="js-correction" cols="30" rows="10">Aucune correction propos√©e.</textarea>
        {% endif %}
    </div>
</div>


{% block scripts %}
        
    <script>
        let editorCorrection = CodeMirror.fromTextArea(document.getElementById('js-correction'), {
            lineNumbers: true,
            mode:  "javascript",
            theme: 'ambiance'
        });
    </script>

    <script>
            $('#js-dropdown-head').click(function(){
                $('#js-dropdown').toggleClass('open')
            });
    </script>
{% endblock %}