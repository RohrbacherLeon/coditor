{% extends "layouts/master.twig" %}

{% block assets %}
{% endblock %}

{% block content %}
<div class="createExo">
    {{message}}
    <h1 class="title">Create</h1>
    <form method='POST' class='createExo__form' enctype="multipart/form-data">
        <div class="form-group">
            <label for="title">Titre</label>
            <input type='text' name='title' id="title" placeholder="Titre de l'exo" required>
        </div>
        <div class="form-group">
            <label for="language">Langage</label>
            <select class="selectLanguage" name="language">
            {% for language in languages %}
                <option value="{{language}}">{{language}}</option>
            {% endfor %}
            </select>
        </div>
        <div class="form-group">
            <label>Tags de l'exercices</label>
            <input type='hidden' name='tags'>
            <div class="searchbar">
                <div class="autocomplete">
                    <div class="autocomplete-tags"></div>
                    <select class="createTag" multiple="multiple">
                        {% for tag in tags %}
                            <option value="{{tag}}">{{tag}}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label for="file">Fichier de test</label>
            <input type='file' id="label" name='file_tests'>
        </div>
        <div class="form-group">
            <label for="file">Correction de l'exercice (Optionnel)</label>
            <input type='file' id="label" name='file_corrections'>
        </div>
        <div class="form-group">
            <label for="file">Squelette de l'exercice (Optionnel)</label>
            <input type='file' id="label" name='file_skeletons'>
        </div>
        <div class="form-group">
            <label>Description de l'exercices</label>
            <textarea id="md" name="description"></textarea>
        </div>
        <div class="button_layout button_layout--right">
            <button class="button button--green" type="submit">Cr√©er l'exercice</button>
        </div>
    </form>
</div>
{% endblock %}

{% block scripts %}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.css">
    <script src="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.js"></script>

    <script src="https://cdn.jsdelivr.net/highlight.js/latest/highlight.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/highlight.js/latest/styles/github.min.css">
    <script src="/js/simplemde.js"></script>

    <script src='/js/create_tag.js'></script>
{% endblock %}